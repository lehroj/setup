#!/usr/bin/env zsh

alias _="sudo"

alias git="hub"

alias dd="docker"
alias dc="docker-compose"
alias ld="lazydocker"

alias cat="bat"
alias cl="clear"
alias ex="exit"
alias fd="find"
alias ht="history"
alias ls="lsd"
alias lt="lsd --tree"
alias na="nano"
alias op="open"
alias rm="trash"
alias tr="tree"

alias os-hidden-hide="defaults write com.apple.finder AppleShowAllFiles -bool false && refresh"
alias os-desktop-show="defaults write com.apple.finder CreateDesktop -bool true && refresh"
alias os-desktop-hide="defaults write com.apple.finder CreateDesktop -bool false && refresh"

alias allo="ping -c 3 www.google.com"
alias copyssh="pbcopy < $HOME/.ssh/id_rsa.pub"
alias hosts="sudo nano /etc/hosts"
alias path="echo -e ${PATH//:/\\n}"
alias reload="exec $SHELL -l"
alias rmds="find . -type f -name '*.DS_Store' -ls -delete"
alias zz="source $HOME/.zshrc"

[ -d ~/Desktop ] && alias _dt="cd $HOME/Desktop"
[ -d ~/Downloads ] && alias _dl="cd $HOME/Downloads"
[ -d ~/Projects ] && alias _pj="cd $HOME/Projects"
[ -d ~/Personal ] && alias _ps="cd $HOME/Personal"
[ -d ~/Sandbox ] && alias _sb="cd $HOME/Sandbox"
[ -d ~/Setup ] && alias _st="cd $HOME/Setup"
